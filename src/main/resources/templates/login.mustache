<div style="text-align:center">
    <h1><i class="fas fa-lock"></i> Login to Continue</h1>
    <p>Please login to continue</p>
</div>

<div class="login-form">

    <input type="radio" class="login-button" id="login" name="buttons">
    <label for="login">Login</label>

    <input type="radio" class="signup-button" id="signup" name="buttons" checked>
    <label for="signup">Signup</label>

    <form action="/login" method="post" id="login-form" class="form-box">

        <div class="signup">

            <label for="fname">First Name</label>
            <input type="text" name="fname" value="">

            <label for="lname">Last Name</label>
            <input type="text" name="lname">

        </div>

        <div class="login">

            <label for="email">Email</label>
            <input type="email" name="email" value="{{.}}">

            <label for="password">Password</label>
            <input type="password" name="password">

        </div>

        <p><input type="submit" value="Login"></p>

    </form>

</div>
