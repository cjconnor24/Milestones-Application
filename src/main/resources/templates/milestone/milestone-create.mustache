{{>../_partials/site-header}}

<link rel="stylesheet" href="/css/dateTimePicker/default/zebra_datepicker.min.css">

<div class="six columns offset-by-three">

    <h1>Create Milestone</h1>

    <form id="create-milestone" method="post" action="/milestones/create">

        {{>_partials/milestone-form}}



    </form>



</div>

<script>
    $(document).ready(function() {
        $('#datepicker').Zebra_DatePicker({
            format: 'd-m-Y H:i'
        });
    });
</script>

{{>../_partials/jquery-validate}}
<script type="text/javascript">
    $(document).ready(function() {

        $("#create-milestone").validate({
            rules: {
                name: {
                    required: true
                },
                description: {
                    required:true
                }
            }
        });

    });

</script>
