<link rel="stylesheet" href="/css/dateTimePicker/default/zebra_datepicker.min.css">

<div class="six columns offset-by-three">
    <h1>Create Milestone</h1>
    <form id="create-milestone" method="post" action="/milestones/create">

        <label for="name">Milestone Name</label>
        <input class="u-full-width" type="text" id="name" placeholder="Enter Milestone name" name="name" required>

        <label for="description">Milestone Description</label>
        <textarea class="u-full-width" style="resize: vertical" placeholder="Please enter your project description" id="description" name="description" required></textarea>


        <label for="dueDate">Due Date</label>
        <input class="u-full-width" type="text" id="datepicker" placeholder="Enter Milestone Due Date" name="dueDate" required>

        <input class="button-primary success" type="submit" value="Create Milestone">

    </form>

    <script src="/js/zebra_datepicker.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#datepicker').Zebra_DatePicker({
                format: 'd-m-Y H:i'
            });
        });
    </script>

</div>
